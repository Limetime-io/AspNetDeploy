@{
    ViewBag.Title = "Index";
    ViewBag.PageClass = "bundlesPage";

    Layout = "~/Views/Shared/_Layout.cshtml";
    BundleVersion bundleVersion = this.ViewBag.BundleVersion;

}

<div class="container">

    <h1>
        <div class="row">
            <div class="col-md-10">
                @bundleVersion.Bundle.Name @bundleVersion.Name <span class="badge rounded-pill text-bg-secondary">Bundle</span>
            </div>
            @*<div class="col-md-2 text-right">
                    <button class="btn btn-default btn-lg">Configure</button>
                </div>*@
        </div>
    </h1>
    <br />

    <ul class="nav nav-pills">
        <li class="nav-item active"><a class="nav-link" href="#">Projects</a></li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("VersionDeployment", new { id = bundleVersion.Id })">Deployment process</a></li>
        <li class="nav-item "><a class="nav-link" href="@Url.Action("VersionPackages", new { id = bundleVersion.Id })">Packages & Publications</a></li>
        <li class="nav-item"><a class="nav-link" href="@Url.Action("VersionVariables", new { id = bundleVersion.Id })">Local variables</a></li>
    </ul>

    <div class="section">
        @ProjectGroup(bundleVersion, "Web projects", ProjectType.Web)
        @ProjectGroup(bundleVersion, "Test projects", ProjectType.Test)
        @ProjectGroup(bundleVersion, "Console projects", ProjectType.Console)
        @ProjectGroup(bundleVersion, "Database projects", ProjectType.Database)
        @ProjectGroup(bundleVersion, "Archives", ProjectType.ZipArchive)
        @ProjectGroup(bundleVersion, "Source files", ProjectType.SourceFiles)
        @ProjectGroup(bundleVersion, "Gulp files", ProjectType.GulpFile)
    </div>
</div>

@helper ProjectGroup(BundleVersion bundleVersion, string name, ProjectType projectType)
{
    <h2>@name</h2>

    if (bundleVersion.ProjectVersionToBundleVersion.Any(pv => pv.ProjectVersion.ProjectType.HasFlag(projectType)))
    {
        foreach (ProjectVersionToBundleVersion projectVersionLink in bundleVersion.ProjectVersionToBundleVersion.Where(pv => pv.ProjectVersion.ProjectType.HasFlag(projectType)))
        {
            var config = ProjectBundleConfigFactory.Create(projectVersionLink.ConfigurationJson);

            <div class="row">
                <div class="col-sm-6">
                    @if (projectVersionLink.ProjectVersion.ProjectType.HasFlag(ProjectType.Web))
                    {
                        <img src="~/Resources/Layout/Images/Icons/VsWebProject.PNG" />
                    }
                    else if (projectVersionLink.ProjectVersion.ProjectType.HasFlag(ProjectType.Test))
                    {
                        <img src="~/Resources/Layout/Images/Icons/VsTestProject.PNG" />
                    }
                    else if (projectVersionLink.ProjectVersion.ProjectType.HasFlag(ProjectType.Console))
                    {
                        <img src="~/Resources/Layout/Images/Icons/VsConsoleProject.PNG" />
                    }
                    else if (projectVersionLink.ProjectVersion.ProjectType.HasFlag(ProjectType.Database))
                    {
                        <img src="~/Resources/Layout/Images/Icons/VsDatabaseProject.png" />
                    }
                    else if (projectVersionLink.ProjectVersion.ProjectType.HasFlag(ProjectType.ZipArchive))
                    {
                        <img src="~/Resources/Layout/Images/Icons/zip32.png" />
                    }
                    else if (projectVersionLink.ProjectVersion.ProjectType.HasFlag(ProjectType.SourceFiles))
                    {
                        <img src="~/Resources/Layout/Images/Icons/zip32.png" />
                    }
                    <a href="@Url.Action("Details", "ProjectVersions", new { id = projectVersionLink.ProjectVersionId })">@projectVersionLink.ProjectVersion.SourceControlVersion.SourceControl.Name / @projectVersionLink.ProjectVersion.SourceControlVersion.Name / @projectVersionLink.ProjectVersion.Name</a>

                    @if (config != null)
                    {
                        if (config is NetCoreProjectBundleConfig)
                        {
                            var netCoreConfig = config as NetCoreProjectBundleConfig;

                            <span class="badge rounded-pill text-bg-dark">@netCoreConfig.Platform</span>
                            <span class="badge rounded-pill text-bg-dark">@netCoreConfig.Architecture</span>
                            <span class="badge rounded-pill text-bg-dark">@netCoreConfig.OutputType</span>
                        }
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div>–</div>
    }
    <br />
}